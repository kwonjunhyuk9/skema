{
  "name": "skema",
  "private": true,
  "workspaces": [
    "apps/backend",
    "apps/frontend"
  ],
  "scripts": {
    "build:frontend": "npm --workspace apps/frontend run build",
    "build:backend": "npm --workspace apps/backend run build",
    "dev:frontend": "npm --workspace apps/frontend run dev",
    "dev:backend": "npm --workspace apps/backend run start:dev",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint .",
    "format": "prettier --write .",
    "e2e": "playwright test"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "ts-jest": "^29.2.5",
    "eslint": "^9.18.0",
    "eslint-config-next": "15.3.5",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.2.3",
    "prettier": "^3.6.2",
    "typescript": "^5.7.3",
    "ts-node": "^10.9.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.7"
  }
}
