{
  "name": "skema",
  "private": true,
  "packageManager": "pnpm@9.12.3",
  "workspaces": [
    "apps/backend",
    "apps/frontend"
  ],
  "scripts": {
    "prettier": "prettier --write .",
    "eslint": "eslint . --fix",
    "stylelint": "stylelint \"**/*.css\" --fix",
    "jest": "jest",
    "playwright": "playwright test",
    "frontend:dev": "pnpm --filter ./apps/frontend dev",
    "frontend:build": "pnpm --filter ./apps/frontend build",
    "frontend:start": "pnpm --filter ./apps/frontend start",
    "backend:dev": "pnpm --filter ./apps/backend dev",
    "backend:build": "pnpm --filter ./apps/backend build",
    "backend:start": "pnpm --filter ./apps/backend dev"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.7",
    "eslint": "^9.18.0",
    "eslint-config-next": "15.3.5",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-unused-imports": "^4.3.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.6.2",
    "stylelint": "^17.0.0",
    "stylelint-config-concentric-order": "^5.3.0",
    "stylelint-order": "^7.0.1",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  }
}
